<%- include("./partials/fcheader")%>


<div class="bg-image container-fluid text-center user-select-none min-vh-100 mt-5">
  <h1 style="font-family: italic; padding-top: 3rem;" class=" fs-6  text-light">weather forecast for 5 days with data every 3 hours of the day </h1>
  <h5 class="mb-2 mt-3  rounded text-light">Weather forecast for <%=info.city.name%>, <%=info.city.country%> </h5>
      <% temperature.forEach(function(temp){ %>
      <div class="bg-image container-fluid text-center mt-3 shadow-lg rounded p-3 ">
          <h2 class=" fs-5 pt-3 text-light"><%=new Date(temp.dt_txt).toLocaleDateString()%> <%=new Date(temp.dt_txt).toLocaleTimeString()%></h2>
          <div class="row">
            <div class="col-md">
              <p style="font-family: italic;" class="lh-lg fs-4 shadow-sm mt-3 rounded text-light">Temperature: <%=temp.main.temp%>&deg;C</p>
              <p style="font-family: italic;" class="lh-lg fs-4  shadow-sm  rounded text-light">Condition: <%=temp.weather[0].description%></p>
          </div>
          <div class="col">
              <p style="font-family: italic;" class="mt-3 fs-4 shadow-sm text-light  rounded lh-lg">Maximum Temperature:  <%=temp.main.temp_max%>&deg;C </p>
              <p style="font-family: italic;" class="mt-3 fs-4 shadow-sm text-light  rounded lh-lg">Minimum Temperature:  <%=temp.main.temp_min%>&deg;C </p>
              <p style="font-family: italic;" class="mt-3 fs-4 shadow-s  rounded lh-lg text-light ">Humidity:   <%=temp.main.humidity%>%</p>
          </div>
          <div>
          <img class="shadow-sm  mb-2 rounded " style="width: 20%" src=" http://openweathermap.org/img/wn/<%=temp.weather[0].icon%>@2x.png">
         </div>
          </div>
        </div>
    <% }); %>
  
  
  </div>


<%- include("./partials/footer")%>


